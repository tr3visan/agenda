<%- include('includes/head') %>

  <%- include('includes/navbar') %>

  <div class="container">
    <div class="row">

      <div class="col-lg-8 offset-md-2 my-5">
        <h1 class="text-center">Contato</h1>
        <p class="text-center lead">Crie ou edite os seus contatos.</p>

        <%- include('includes/messages') %>

        <% if(contato._id) { %>
          <form action="/contato/edit/<%= contato._id %>" method="POST">
        <% } else { %>
          <form action="/contato/register" method="POST">
        <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="createNome">Nome</label>
              <input value="<%= contato.nome %>" type="text" class="form-control" id="createNome" aria-describedby="nomeHelp" name="nome">
            </div>
            <div class="form-group">
              <label for="createSobrenome">Sobrenome</label>
              <input value="<%= contato.sobrenome %>" type="text" class="form-control" id="createSobrenome" aria-describedby="sobrenomeHelp" name="sobrenome">
            </div>
            <div class="form-group">
              <label for="createEmail">E-mail</label>
              <input value="<%= contato.email %>" type="email" class="form-control" id="createEmail" aria-describedby="emailHelp" name="email">
            </div>
            <div class="form-group">
              <label for="createTel">Telefone</label>
              <input value="<%= contato.telefone %>" type="tel" class="form-control" id="createTel" aria-describedby="telHelp" name="telefone">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>

      </div>

    </div>
  </div>

<%- include('includes/footer') %>
