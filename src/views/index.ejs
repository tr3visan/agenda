<%- include('includes/head') %>

  <%- include('includes/navbar') %>

  <div class="container">
    <div class="row">

      <div class="col-lg-8 offset-md-2 my-5">
        <h1 class="text-center">Agenda</h1>
        <p class="text-center lead">Seus contatos organizados.</p>

        <%- include('includes/messages') %>

        <div class="resposive-table">
          <% if(contatos.length > 0) { %>
            <table class="table my-3">
              <% contatos.forEach((contato) => { %>
                <tr>
                  <td><%= contato.nome %></td>
                  <td><%= contato.sobrenome %></td>
                  <td><%= contato.telefone %></td>
                  <td><%= contato.email %></td>
                  <td>
                    <a href="/contato/index/<%= contato._id %>">
                      Editar
                    </a>
                  </td>
                  <td>
                    <a class="text-danger" href="/contato/delete/<%= contato._id %>">
                      Excluir
                    </a>
                  </td>
                </tr>
              <% }) %>
            </table>
          <% } else { %>
            <p class="text-center lead">NÃ£o exitem contatos na sua agenda.</p>
          <% } %>
        </div>
      </div>

    </div>
  </div>

<%- include('includes/footer') %>
